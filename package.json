    "solid-js": "^1.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^20.17.31",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-solid": "^0.14.5",
    "gh-pages": "^6.3.0",
    "globals": "^15.15.0",
    "solid-devtools": "^0.30.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.4.18",
    "vite-plugin-mkcert": "^1.17.8",
